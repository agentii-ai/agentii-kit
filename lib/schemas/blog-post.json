{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Blog Post Frontmatter",
  "type": "object",
  "required": ["title", "description", "date", "author", "tags"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 10,
      "maxLength": 60,
      "description": "Post title optimized for SEO"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "maxLength": 160,
      "description": "Meta description for search engines"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Publication date in YYYY-MM-DD format"
    },
    "author": {
      "type": "string",
      "description": "Author name (must exist in content/authors/)"
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Tags for categorization (lowercase-hyphenated)"
    },
    "cover": {
      "type": "string",
      "description": "Cover image path (optional)"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "description": "Show in featured section"
    },
    "draft": {
      "type": "boolean",
      "default": false,
      "description": "Hide from production"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL slug (auto-generated if not provided)"
    },
    "canonical": {
      "type": "string",
      "format": "uri",
      "description": "Canonical URL if republished content"
    },
    "updatedAt": {
      "type": "string",
      "format": "date",
      "description": "Last update date"
    }
  },
  "additionalProperties": false
}
